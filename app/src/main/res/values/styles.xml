<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="title">
        <item name="android:textColor">@color/text_blue_xiec</item>
        <item name="android:textSize">@dimen/dp_16</item>
    </style>
    <style name="Edit_content">
        <item name="android:textColorHint">@color/text_black_1_xiec</item>
        <item name="android:textSize">@dimen/dp_16</item>
    </style>
    <style name="content_botton">
        <item name="android:textColor">@color/text_black_2_xiec</item>
        <item name="android:textSize">@dimen/dp_16</item>
    </style>
    <style name="content_title">
        <item name="android:textColor">@color/text_black_3_xiec</item>
        <item name="android:textSize">@dimen/dp_26</item>
    </style>

    <style name="botton_orige_xiech">
        <item name="android:layout_marginLeft">@dimen/dp_10</item>
        <item name="android:layout_marginRight">@dimen/dp_10</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:background">@drawable/shape_botton</item>
        <item name="android:textColor">@color/write_xiec</item>
        <item name="android:textSize">@dimen/dp_26</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
